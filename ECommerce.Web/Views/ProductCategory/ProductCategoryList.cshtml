@model IEnumerable<ECommerce.Web.DTOs.ProductCategoryWithParentCategoryDto>

@{
    ViewData["Title"] = "ProductCategoryList";
}

<h1>ProductCategoryList</h1>

<p>
    <a asp-action="NewProductCategory">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                ParentCategoryName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategory.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateProductCategory", new { id=item.Id }) |
                @Html.ActionLink("Details", "ProductCategoryDetail", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteProductCategory", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
